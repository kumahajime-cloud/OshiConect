<div class="post-new">
  <h2 class="page-title">新しい投稿</h2>

  <%= form_with model: @post, local: true, class: "post-form" do |f| %>
    <% if @post.errors.any? %>
      <div class="error-messages">
        <h3><%= pluralize(@post.errors.count, "個のエラー") %>があります：</h3>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :content, "投稿内容" %>
      <%= f.text_area :content, rows: 8, placeholder: "推しへの想いを語ろう！ #ハッシュタグ も使えます", class: "form-control" %>
      <small class="form-text">ハッシュタグは # から始めてください（例：#推しの名前）</small>
    </div>

    <div class="form-group">
      <%= f.label :image, "画像（任意）" %>
      <%= f.file_field :image, accept: "image/*", class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.submit "投稿する", class: "btn btn-primary" %>
      <%= link_to "キャンセル", root_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
